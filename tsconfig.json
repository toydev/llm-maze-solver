{
  "compilerOptions": {
    "types": ["node", "vitest/globals"],
    "lib": ["esnext"],
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ESNext"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
